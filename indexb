    <script>
        const riskPresets = {
            LOW: {
                expectedProfit: 5000,
                maxPosition: 100000,
                stopLoss: -0.02,
                dailyLoss: 10000,
                leverage: 1
            },
            MEDIUM: {
                expectedProfit: 15000,
                maxPosition: 500000,
                stopLoss: -0.05,
                dailyLoss: 50000,
                leverage: 3
            },
            HIGH: {
                expectedProfit: 50000,
                maxPosition: 2000000,
                stopLoss: -0.10,
                dailyLoss: 200000,
                leverage: 10
            }
        };

        function updateRiskParameters() {
            const riskLevel = document.getElementById('riskLevel').value;
            const preset = riskPresets[riskLevel];
            
            document.getElementById('maxPosition').textContent = '$' + preset.maxPosition.toLocaleString();
            document.getElementById('stopLoss').textContent = (preset.stopLoss * 100) + '%';
            document.getElementById('dailyLoss').textContent = '$' + preset.dailyLoss.toLocaleString();
            document.getElementById('leverage').textContent = preset.leverage + '×';
            
            updateAIWhisper();
        }

        function updateAIWhisper() {
            const riskLevel = document.getElementById('riskLevel').value;
            const aiMax = document.getElementById('aiMaxMode').checked ? 'AI-MAX enabled' : 'AI-COPILOT';
            const gasless = document.getElementById('gaslessMode').checked ? 'ON' : 'OFF';
            const preset = riskPresets[riskLevel];
            
            const whisper = `��� Config: ${riskLevel} risk | ${aiMax} | Gasless ${gasless} | Multi-chain ON\nExpected Profit/hr: $${preset.expectedProfit.toLocaleString()} | Min Confidence: 75%`;
            document.getElementById('aiWhisperContent').textContent = whisper;
        }

        function connectWallet() {
            alert('Wallet connection requested - would integrate with MetaMask/Web3 in production');
        }

        function deployLive() {
            alert(' AI-MAX Deployment Initiated!\nAll systems going live...');
        }

        function emergencyStop() {
            if (confirm(' ARE YOU SURE?\nThis will immediately halt all trading activity!')) {
                alert('EMERGENCY STOP ACTIVATED! All trading halted.');
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            updateRiskParameters();
            
            setInterval(() => {
                const profitToday = document.getElementById('profitToday');
                const currentProfit = parseInt(profitToday.textContent.replace(/[$,]/g, ''));
                profitToday.textContent = '$' + (currentProfit + Math.floor(Math.random() * 1000)).toLocaleString();
            }, 5000);
        });
    </script>
